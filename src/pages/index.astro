---
import LandingPageLayout from "../layouts/LandingPageLayout.astro";
import { getEntry } from "astro:content";

const entry = await getEntry("startseite", "start");
const { data } = entry;

// korrekt: Content via render()
const { Content } = await entry.render();
---

<LandingPageLayout title={data.title}>
  <article class="landing-md">
    <Content />
  </article>

  <style>
    .landing-md {
      position: relative;
      isolation: isolate;
      color: var(--color-ink);
      max-width: 70ch;
      margin: 0 auto;
      padding-block: var(--space-lg);
    }
  </style>
</LandingPageLayout>