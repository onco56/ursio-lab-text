---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";

const tools = await getCollection("tools");
---

<PageLayout title="Tools & Methoden">
  <head slot="head">
    <title>URSIO – Tools & Methoden</title>
    <meta property="og:title" content="URSIO – Tools & Methoden" />
    <meta property="og:type" content="website" />
  </head>

  <section class="tools-list">
    {tools.length === 0 ? (
      <p>Noch keine Tools vorhanden.</p>
    ) : (
      <ul>
        {tools.map((entry) => (
          <li>
            <a href={`/tools/${entry.slug}/`}>
              {entry.data.title}
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>

  <style>
    .tools-list {
      max-width: 70ch;
      margin: 0 auto;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      margin-bottom: var(--space-md);
    }

    a {
      color: var(--color-accent);
      font-size: var(--text-lg);
      text-decoration: none;
    }

    a:hover {
      color: var(--color-accent-soft);
    }
  </style>
</PageLayout>