---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";

const entries = await getCollection("sparks");
---

<PageLayout title="Sparks">
  <section class="q-stack-lg">
    <h1 class="q-focus">Sparks</h1>

    <ul class="q-list">
      {entries.map((entry) => (
        <li class="q-list-item q-hover-soft q-click q-keyfocus">
          <a href={`/sparks/${entry.slug}/`}>{entry.data.title}</a>
        </li>
      ))}
    </ul>
  </section>
</PageLayout>