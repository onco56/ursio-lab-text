---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";

const entries = await getCollection("garten");
---

<PageLayout title="Wissensgarten">
  <head slot="head">
    <title>URSIO – Wissensgarten</title>
    <meta property="og:title" content="URSIO – Wissensgarten" />
    <meta property="og:type" content="website" />
  </head>

  <section class="garten-list">
    {entries.length === 0 ? (
      <p>Noch keine Einträge im Wissensgarten vorhanden.</p>
    ) : (
      <ul>
        {entries.map((entry) => (
          <li>
            <a href={`/garten/${entry.slug}/`}>
              {entry.data.title}
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>

  <style>
    .garten-list {
      max-width: 70ch;
      margin: 0 auto;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      margin-bottom: var(--space-md);
    }

    a {
      color: var(--color-accent);
      font-size: var(--text-lg);
      text-decoration: none;
    }

    a:hover {
      color: var(--color-accent-soft);
    }
  </style>
</PageLayout>