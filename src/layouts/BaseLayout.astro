---
const { title } = Astro.props;
import QuietHeader from "../components/QuietHeader.astro";
import QuietFooter from "../components/QuietFooter.astro";

/* URSIO â€“ global noindex for lab sites (env-gesteuert) */
const noindex = import.meta.env.PUBLIC_URSIO_NOINDEX === 'true';
---

<!DOCTYPE html>

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {title && <title>{title}</title>}

{noindex && (
  <>
    <meta name="robots" content="noindex, nofollow, noarchive" />
    <meta name="googlebot" content="noindex, nofollow, noarchive" />
  </>
)}


    <!-- URSIO Global Styles -->
    <style is:global>
      @import "../styles/global.css";
      @import "../styles/tokens.css";
      @import "../styles/typography.css";
      @import "../styles/base.css";
      @import "../styles/layout.css";
      @import "../styles/quiet-state.css";
      @import "../styles/quiet-motion.css";
      @import "../styles/quiet-interaction.css";
      @import "../styles/quiet-depth.css";
    </style>

    <slot name="head" />

    <script src="/scripts/quiet-motion.js" defer></script>
    <script src="/scripts/quiet-interaction.js" defer></script>
  </head>

  <body class="ursio-body">
    <QuietHeader />

    <main class="ursio-main">
      <slot />
    </main>

    <QuietFooter />
  </body>
</html>