---
import QuietNavLink from "./quiet/QuietNavLink.astro";
---

<footer class="quiet-footer">
  <nav class="quiet-footer-nav">
    <QuietNavLink href="/impressum/">Impressum</QuietNavLink>
    <QuietNavLink href="/kontakt/">Kontakt</QuietNavLink>
    <QuietNavLink href="/rechtliches/">Rechtliches</QuietNavLink>
  </nav>

  <p class="quiet-footer-copy">
    © {new Date().getFullYear()} URSIO – Alle Rechte vorbehalten.
  </p>

  <style>
    .quiet-footer {
      width: 100%;
      padding-block: var(--space-lg);
      text-align: center;
      font-family: var(--font-sans);
      font-size: var(--ui-size);
      color: var(--color-ink-soft);
    }

    .quiet-footer-nav {
      display: flex;
      justify-content: center;
      gap: var(--space-md);
      margin-bottom: var(--space-md);
    }

    .quiet-footer-copy {
      opacity: 0.7;
    }
  </style>
</footer>
