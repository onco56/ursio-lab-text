---
const { title, text } = Astro.props;
import QuietSurface from "../../components/quiet/QuietSurface.astro";
import QuietStack from "../../components/quiet/QuietStack.astro";
import QuietTitle from "../../components/quiet/QuietTitle.astro";
import QuietText from "../../components/quiet/QuietText.astro";
---

<QuietSurface>
  <QuietStack space="md">
    <QuietTitle level={2}>{title}</QuietTitle>
    <QuietText>{text}</QuietText>

    <QuietStack horizontal space="sm">
      <slot />
    </QuietStack>
  </QuietStack>
</QuietSurface>